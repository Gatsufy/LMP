package eserciziario;

import java.util.ArrayList;

public class Biblioteca {
	
	private ArrayList<Book> listaLibri;
	
	private ArrayList<Dvd> listaDvd;

	public Biblioteca(ArrayList<Book> listaLibri, ArrayList<Dvd> listaDvd) {
		super();
		this.listaLibri = listaLibri;
		this.listaDvd = listaDvd;
	}

	public ArrayList<Book> getListaLibri() {
		return listaLibri;
	}

	public ArrayList<Dvd> getListaDvd() {
		return listaDvd;
	}
	
	public int periodoPiùLungoBook(){
		int maxPeriodo=0;
		for(Book b: listaLibri){
			for(Prestito p: b.getListaPrestiti()){
				if(maxPeriodo<p.getDataInizio().getTime()-p.getDataFine().getTime()){
					maxPeriodo=(int) (p.getDataInizio().getTime()-p.getDataFine().getTime());
				}
			}
		}
		return (((maxPeriodo/1000)/60)/60)/24;
	}
	
	public boolean checkIncongruenzeBook(){
		int indexB=1;
		for(Book b: listaLibri){
			for(Prestito p: b.getListaPrestiti()){
				if(p.getDataInizio().before(b.getListaPrestiti().get(indexB).getDataFine()-1900));
				
			}
		}
	}

}



